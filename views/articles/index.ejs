<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Blog Articles</h1>
      <a href="/articles/new" class="btn btn-success">New Article</a>
      <% articles.forEach(article => {%>
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title"><%= article.title %></div>
          <div class="card-date text-muted mb-2">
            <%= article.date.toLocaleDateString('en-GB') %>
          </div>
          <div class="card-desc mb-2"><%=article.descr %></div>

          <a href="/articles/<%=article.id  %> " class="btn btn-primary">
            Read More</a
          >
          <a href="/articles/edit/<%=article.id  %>" class="btn btn- btn-info">
            Edit</a
          >
          <a href="/articles/delete/<%=article.id  %>" class="btn btn-danger">
            Delete</a
          >
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
